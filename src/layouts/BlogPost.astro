---
import BaseLayout from './BaseLayout.astro';
import Comments from '../components/Comments.astro';

interface Props {
  title: string;
  date: string;
  categories?: string | string[];
}
const { title, date, categories: rawCategories } = Astro.props;
const categories = Array.isArray(rawCategories)
  ? rawCategories
  : typeof rawCategories === 'string'
    ? rawCategories.split(/\s+/).filter(Boolean)
    : [];
---
<BaseLayout title={`${title} | 우주개구리`}>
  <article>
    <h1>{title}</h1>
    <p class="post-meta">
      <time datetime={date}>{new Date(date).toLocaleDateString('ko-KR', { year: 'numeric', month: 'long', day: 'numeric' })}</time>
      {categories.length > 0 && (
        <span class="post-categories">
          {categories.map((cat) => (
            <span class="tag">{cat}</span>
          ))}
        </span>
      )}
    </p>
    <div class="post-content">
      <slot />
    </div>
    <Comments />
  </article>
</BaseLayout>

<style>
  article {
    max-width: 760px;
    background: rgba(255, 255, 255, 0.55);
    border: 1px solid rgba(255, 255, 255, 0.6);
    border-radius: 16px;
    padding: 28px 26px;
    box-shadow: var(--glass-shadow), var(--glass-inner-glow);
  }

  h1 {
    color: var(--dark-green);
    margin-bottom: 8px;
    font-size: 2rem;
    line-height: 1.3;
    letter-spacing: -0.01em;
  }

  .post-meta {
    color: #8a9a92;
    font-size: 0.9em;
    margin-bottom: 28px;
    display: flex;
    align-items: center;
    gap: 12px;
    flex-wrap: wrap;
  }

  .post-categories {
    display: flex;
    gap: 6px;
  }

  :global(.post-content) {
    font-size: 1.04rem;
    color: #26332d;
  }

  :global(.post-content > * + *) {
    margin-top: 1rem;
  }

  :global(.post-content h1),
  :global(.post-content h2),
  :global(.post-content h3),
  :global(.post-content h4) {
    color: var(--dark-green);
    line-height: 1.35;
    margin-top: 2rem;
    margin-bottom: 0.6rem;
    letter-spacing: -0.01em;
  }

  :global(.post-content h1) { font-size: 1.9rem; }
  :global(.post-content h2) { font-size: 1.55rem; }
  :global(.post-content h3) { font-size: 1.25rem; }
  :global(.post-content h4) { font-size: 1.05rem; }

  :global(.post-content p),
  :global(.post-content li),
  :global(.post-content blockquote) {
    line-height: 1.9;
  }

  :global(.post-content a) {
    text-decoration: underline;
    text-decoration-thickness: 1.2px;
    text-underline-offset: 3px;
  }

  :global(.post-content ul),
  :global(.post-content ol) {
    margin: 1rem 0 1rem 1.25rem;
    padding-left: 1rem;
  }

  :global(.post-content li + li) {
    margin-top: 0.4rem;
  }

  :global(.post-content strong) {
    color: #1f2f28;
    font-weight: 700;
  }

  :global(.post-content code) {
    background: #edf4f0;
    border: 1px solid #dde8e2;
    padding: 0.14rem 0.4rem;
    border-radius: 6px;
    font-size: 0.9em;
  }

  :global(.post-content pre) {
    background: #0f1720;
    color: #eaf2ef;
    padding: 1rem;
    border-radius: 10px;
    overflow-x: auto;
    margin: 1.2rem 0;
  }

  :global(.post-content pre code) {
    background: transparent;
    border: 0;
    padding: 0;
    border-radius: 0;
    color: inherit;
  }

  :global(.post-content blockquote) {
    border-left: 4px solid var(--frog-green);
    padding: 0.45rem 0 0.45rem 0.9rem;
    color: #42544d;
    background: rgba(255, 255, 255, 0.5);
    border-radius: 0 8px 8px 0;
    margin: 1.2rem 0;
  }

  :global(.post-content hr) {
    border: 0;
    border-top: 1px solid #dbe6e1;
    margin: 1.6rem 0;
  }

  :global(.post-content img) {
    border-radius: 10px;
    margin: 1rem 0;
  }

  :global(.post-content table) {
    width: 100%;
    border-collapse: collapse;
    margin: 1.2rem 0;
    font-size: 0.96em;
    background: rgba(255, 255, 255, 0.65);
    border-radius: 10px;
    overflow: hidden;
    display: block;
    overflow-x: auto;
  }

  :global(.post-content th),
  :global(.post-content td) {
    border: 1px solid #dbe6e1;
    padding: 0.55rem 0.7rem;
    text-align: left;
  }

  :global(.post-content th) {
    background: #edf4f0;
    color: #2b3a33;
  }

  @media (max-width: 720px) {
    article {
      padding: 22px 16px;
      border-radius: 12px;
    }

    h1 {
      font-size: 1.65rem;
    }

    :global(.post-content) {
      font-size: 1rem;
    }
  }
</style>
