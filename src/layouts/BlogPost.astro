---
import BaseLayout from './BaseLayout.astro';
import Comments from '../components/Comments.astro';

interface Props {
  title: string;
  date: string;
  categories?: string | string[];
}
const { title, date, categories: rawCategories } = Astro.props;
const categories = Array.isArray(rawCategories)
  ? rawCategories
  : typeof rawCategories === 'string'
    ? rawCategories.split(/\s+/).filter(Boolean)
    : [];
---
<BaseLayout title={`${title} | 우주개구리`}>
  <article>
    <h1>{title}</h1>
    <p class="post-meta">
      <time datetime={date}>{new Date(date).toLocaleDateString('ko-KR', { year: 'numeric', month: 'long', day: 'numeric' })}</time>
      {categories.length > 0 && (
        <span class="post-categories">
          {categories.map((cat) => (
            <span class="tag">{cat}</span>
          ))}
        </span>
      )}
    </p>
    <div class="post-content">
      <slot />
    </div>
    <Comments />
  </article>
</BaseLayout>

<style>
  article {
    max-width: 720px;
  }

  h1 {
    color: var(--dark-green);
    margin-bottom: 8px;
    font-size: 1.8em;
  }

  .post-meta {
    color: #8a9a92;
    font-size: 0.9em;
    margin-bottom: 32px;
    display: flex;
    align-items: center;
    gap: 12px;
    flex-wrap: wrap;
  }

  .post-categories {
    display: flex;
    gap: 6px;
  }

  :global(.post-content > * + *) {
    margin-top: 1rem;
  }

  :global(.post-content h1),
  :global(.post-content h2),
  :global(.post-content h3),
  :global(.post-content h4) {
    color: var(--dark-green);
    line-height: 1.35;
    margin-top: 2rem;
    margin-bottom: 0.6rem;
  }

  :global(.post-content h1) { font-size: 1.9rem; }
  :global(.post-content h2) { font-size: 1.5rem; }
  :global(.post-content h3) { font-size: 1.2rem; }

  :global(.post-content p),
  :global(.post-content li),
  :global(.post-content blockquote) {
    line-height: 1.85;
  }

  :global(.post-content ul),
  :global(.post-content ol) {
    margin: 1rem 0 1rem 1.25rem;
    padding-left: 1rem;
  }

  :global(.post-content li + li) {
    margin-top: 0.4rem;
  }

  :global(.post-content code) {
    background: #f1f5f3;
    padding: 0.15rem 0.4rem;
    border-radius: 6px;
    font-size: 0.92em;
  }

  :global(.post-content pre) {
    background: #0f1720;
    color: #eaf2ef;
    padding: 1rem;
    border-radius: 10px;
    overflow-x: auto;
    margin: 1.2rem 0;
  }

  :global(.post-content pre code) {
    background: transparent;
    padding: 0;
    border-radius: 0;
    color: inherit;
  }

  :global(.post-content blockquote) {
    border-left: 4px solid var(--frog-green);
    padding: 0.4rem 0 0.4rem 0.9rem;
    color: #4d5c56;
    background: rgba(255, 255, 255, 0.45);
    border-radius: 0 8px 8px 0;
    margin: 1.2rem 0;
  }

  :global(.post-content hr) {
    border: 0;
    border-top: 1px solid #dbe6e1;
    margin: 1.5rem 0;
  }

  :global(.post-content img) {
    border-radius: 10px;
    margin: 1rem 0;
  }
</style>
