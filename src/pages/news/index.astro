<style>
  h1 {
    margin-bottom: 0.5rem;
  }

  .description {
    color: var(--text-secondary);
    font-size: 0.95rem;
    margin-bottom: 2rem;
  }

  .news-list {
    list-style: none;
    padding: 0;
    display: grid;
    gap: 1.5rem;
  }

  .news-card {
    display: block;
    padding: 1.5rem;
    border: 1px solid var(--border);
    border-radius: 12px;
    background: rgba(255, 255, 255, 0.6);
    transition: all 0.2s;
    text-decoration: none;
    color: inherit;
  }

  @supports (backdrop-filter: blur(8px)) {
    .news-card {
      backdrop-filter: blur(8px);
    }
  }

  .news-card:hover {
    border-color: var(--frog-green);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(91, 168, 71, 0.15);
  }

  .news-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  time {
    font-size: 0.85rem;
    color: var(--text-secondary);
    font-weight: 500;
  }

  .categories {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .category-tag {
    font-size: 0.75rem;
    padding: 2px 8px;
    border-radius: 4px;
    background: var(--frog-green);
    color: white;
    font-weight: 600;
  }

  .news-card h2 {
    font-size: 1.5rem;
    margin: 0 0 0.5rem 0;
    color: var(--dark-green);
  }

  .subtitle {
    font-size: 1rem;
    color: var(--text-secondary);
    font-style: italic;
    margin-bottom: 0.75rem;
  }

  .summary {
    font-size: 0.9rem;
    color: var(--text-secondary);
    line-height: 1.6;
    margin: 0;
  }

  .empty-state {
    text-align: center;
    padding: 4rem 2rem;
    color: var(--text-secondary);
  }

  @media (max-width: 640px) {
    .news-card {
      padding: 1rem;
    }

    .news-card h2 {
      font-size: 1.25rem;
    }
  }
</style>
