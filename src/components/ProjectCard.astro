---
interface Props {
  name: string;
  slug: string;
  tagline: string;
  description: string;
  status: string;
  icon?: string;
  tags: string[];
  appstore?: string;
  github?: string;
  page?: string;
}
const { name, slug, tagline, description, status, icon, tags, appstore, github, page } = Astro.props;

const statusIcon = status === 'released' ? 'üçé' : status === 'development' ? 'üîß' : 'üì¶';
const statusBarClass = `status-bar-${status.toLowerCase().replace(/\s+/g, '')}`;
---
<div class="project-card">
  <div class={`status-bar ${statusBarClass}`}></div>
  <span class="project-status" title={status}>{statusIcon}</span>
  <div class="card-header">
    {icon ? (
      <img class="project-icon" src={icon} alt={`${name} icon`} />
    ) : (
      <div class="project-icon-placeholder">{name.charAt(0)}</div>
    )}
    <div class="card-header-text">
      <h3>{name}</h3>
      <p class="project-tagline">{tagline}</p>
    </div>
  </div>
  <p class="project-description">{description}</p>
  <div class="project-tags">
    {tags.map((tag) => (
      <span class="tag">{tag}</span>
    ))}
  </div>
  <div class="project-links">
    {page && (
      <a class="btn btn-primary" href={page}>Details</a>
    )}
    {appstore && (
      <a class="btn btn-primary" href={appstore} target="_blank" rel="noopener noreferrer">App Store ‚Üó</a>
    )}
    {github && (
      <a class="btn btn-secondary" href={github} target="_blank" rel="noopener noreferrer">GitHub ‚Üó</a>
    )}
  </div>
</div>

<style>
  .project-card {
    position: relative;
    background: rgba(255, 255, 255, 0.45);
    backdrop-filter: blur(20px) saturate(150%);
    -webkit-backdrop-filter: blur(20px) saturate(150%);
    border: 1px solid rgba(255, 255, 255, 0.5);
    border-radius: 12px;
    padding: 24px;
    padding-top: 28px;
    overflow: hidden;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.08), inset 0 1px 0 rgba(255, 255, 255, 0.6);
    transition: transform 0.15s, box-shadow 0.15s, background 0.15s;
  }

  .project-card:hover {
    transform: translateY(-2px) scale(1.01);
    background: rgba(255, 255, 255, 0.65);
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.12), inset 0 1px 0 rgba(255, 255, 255, 0.8);
  }

  /* Status color bar at top */
  .status-bar {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    opacity: 0.8;
  }

  .status-bar-released {
    background: var(--frog-green);
  }

  .status-bar-development {
    background: var(--planet-orange);
  }

  .status-bar-opensource {
    background: var(--sky-blue);
  }

  /* Status icon - top right */
  .project-status {
    position: absolute;
    top: 10px;
    right: 10px;
    font-size: 1.1em;
    line-height: 1;
    cursor: default;
  }

  /* Card header: icon + text side by side */
  .card-header {
    display: flex;
    flex-direction: row;
    align-items: center;
    gap: 12px;
    margin-bottom: 12px;
    padding-right: 32px;
  }

  .project-icon {
    width: 64px;
    height: 64px;
    border-radius: 14px;
    flex-shrink: 0;
  }

  .project-icon-placeholder {
    width: 64px;
    height: 64px;
    border-radius: 14px;
    background: var(--sky-blue);
    color: var(--dark-green);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5em;
    font-weight: bold;
    flex-shrink: 0;
  }

  .card-header-text h3 {
    margin: 0 0 2px;
    color: var(--dark-green);
  }

  .project-tagline {
    color: #7a8a82;
    font-size: 0.9em;
    margin: 0;
  }

  .project-description {
    color: #556;
    font-size: 0.95em;
    margin-bottom: 12px;
  }

  /* Tags */
  .project-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 6px;
    margin-bottom: 12px;
  }

  .tag {
    background: rgba(255, 255, 255, 0.5);
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
    color: var(--frog-green-dark);
    padding: 3px 10px;
    border-radius: 12px;
    font-size: 0.78em;
    font-weight: 500;
    border: 1px solid rgba(255, 255, 255, 0.6);
    transition: background 0.15s, border-color 0.15s;
  }

  .tag:hover {
    background: rgba(255, 255, 255, 0.7);
    border-color: rgba(255, 255, 255, 0.8);
  }

  /* Links */
  .project-links {
    display: flex;
    gap: 8px;
    margin-top: 4px;
  }

  .project-links .btn {
    display: inline-block;
    padding: 10px 22px;
    border-radius: 20px;
    text-decoration: none;
    font-size: 0.9em;
    font-weight: 600;
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
    transition: transform 0.15s, box-shadow 0.15s, background 0.15s;
  }

  .project-links .btn:hover {
    transform: translateY(-1px);
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.12);
  }

  .project-links .btn-primary {
    background: var(--frog-green);
    color: #fff;
  }

  .project-links .btn-secondary {
    background: rgba(255, 255, 255, 0.6);
    color: var(--dark-green);
    border: 1px solid rgba(255, 255, 255, 0.8);
  }

  .project-links .btn-secondary:hover {
    background: rgba(255, 255, 255, 0.8);
  }
</style>
